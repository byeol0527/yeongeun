#include <stdio.h>
int gugudan(int a); //함수 선언
int main()
{	
	gugudan(2); //함수 호출
	gugudan(3);
	gugudan(7);
	return 0;
}

int gugudan(int a) //함수 정의
{	
	int b = 1;
	while (a>=1, b<10) //a가 1보다 크고 b가 9가 될때까지 작동
	{	
		int result = a * b;
		printf("%d X %d = %d\n", a, b, result);
		b++; //모든 작업이 끝나고 b는 1씩 증감
	}
	return 0;
}
//구구단 코드 짜보기
